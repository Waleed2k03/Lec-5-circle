#include <iostream>
#include <string>
using namespace std;

int main()
{
	double r,a,c;
	cout << "Enter the radius to calculate the circumference and area of the circle \n ";
		cin >> r;
	    a = 3.14 * r * r;
		c = 2 * 3.14 * r;
		cout << "The area of the circle is : \n " << a << endl;
		cout << "The circumference of the circle is : \n " << c << endl;
}
